<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd" version="2.1">
	
	<persistence-unit name="blank" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/blankDatasource</jta-data-source>
	     
		<!-- domínios mapeados. -->
		<class>br.jus.trece.api.domain.corporativo.Bairro</class>
		<class>br.jus.trece.api.domain.corporativo.Uf</class>
		<class>br.jus.trece.api.domain.corporativo.Localidade</class>
		<class>br.jus.trece.api.domain.corporativo.Zona</class>
		<class>br.jus.trece.api.domain.corporativo.Local</class>
		<class>br.jus.trece.api.domain.corporativo.Secao</class>
		<class>br.jus.trece.api.domain.corporativo.Unidade</class>
		<class>br.jus.trece.api.domain.corporativo.Eleicao</class>
		<class>br.jus.trece.api.domain.corporativo.Usuario</class>
		<class>br.jus.trece.api.domain.corporativo.Ue</class>
		<class>br.jus.trece.api.domain.corporativo.Mesario</class>
		<class>br.jus.trece.api.domain.corporativo.Correspondencia</class>
		
		<class>br.jus.trece.api.domain.pandora.Host</class>
		<class>br.jus.trece.api.domain.pandora.Servico</class>
		<class>br.jus.trece.api.domain.pandora.Esquema</class>
		<class>br.jus.trece.api.domain.pandora.TecnologiaSistema</class>
		<class>br.jus.trece.api.domain.pandora.Sistema</class>
		<class>br.jus.trece.api.domain.pandora.Instalacao</class>
		<class>br.jus.trece.api.domain.pandora.TipoFuncionalidade</class>
		<class>br.jus.trece.api.domain.pandora.Funcionalidade</class>
		<class>br.jus.trece.api.domain.pandora.Grupo</class>
		<class>br.jus.trece.api.domain.pandora.Perfil</class>
		<class>br.jus.trece.api.domain.pandora.Log</class>
		<class>br.jus.trece.api.domain.pandora.Erro</class>
		<class>br.jus.trece.api.domain.pandora.Conexao</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
			   
			<!-- configuração de desenvolvimento. -->			         
			<!--
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			-->
			
			<!-- configuração de homologação/produção. -->
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>
			
			<property name="hibernate.default_schema" value="blank"/>
			<property name="jboss.entity.manager.factory.jndi.name" value="java:/blankEntityManagerFactory"/>
		</properties>
	</persistence-unit>
                
</persistence>
